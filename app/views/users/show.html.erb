<% title 'User Profile' %>

<%= div_for @user do %>
<label>Name:</label> <%= @user.name %><br>
<label>Email:</label> <%= @user.email %>
<% end %>

<% if current_user === @user %>
	<%= link_to "Edit", edit_user_path(@user), class: "btn btn-primary" %>
	<%= link_to "Delete Account", user_path(@user), class: "btn btn-danger", method: :delete, confirm: {message: "Are you sure?"} %>
<% end %>